# Activar/desactivar MediaPipe Pose (1 = sí, 0 = no)
USE_MEDIAPIPE=1

# Activar/desactivar uso de BodyIndex (para point cloud del cuerpo)
USE_BODY_INDEX=1

# Complejidad del modelo de MediaPipe Pose (0, 1, 2)
POSE_MODEL_COMPLEXITY=1

# FPS objetivo (solo para referencia, el timer intentará aproximarse)
TARGET_FPS=30

# -------------------------
# Performance / Tuning
# -------------------------

# OpenCV
OPENCV_USE_OPTIMIZED=1      # 1 = cv2.setUseOptimized(True)
OPENCV_NUM_THREADS=4        # 0 = auto; >0 fija num. de hilos de OpenCV

# Prioridad del proceso (solo Windows)
# Valores: IDLE, BELOW_NORMAL, NORMAL, ABOVE_NORMAL, HIGH, REALTIME
PROCESS_PRIORITY=HIGH

# Forzar backend OpenGL de Qt
FORCE_QT_DESKTOP_OPENGL=1   # 1 = QT_OPENGL=desktop

# Intentar usar CUDA en OpenCV (si tu build de OpenCV lo soporta)
ENABLE_CUDA=1